    <style name="ActionBarCompat">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/header</item>
    </style>

    <style name="ActionBarCompatSp">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/head</item>
    </style>


    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>

        <item name="android:background">@null</item>
    </style>

    <style name="FooterBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/footer</item>

    </style>
    <style name="FooterBar2">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/splashfooter</item>

    </style>

    <style name="listd">
        <item name="android:background">@color/listcol</item>
    </style>
    <style name="tab">

        <item name="android:textColor">#FFFFFF</item>
        <item name="android:title">#FFFFFF</item>


        <item name="android:background">#FF121920</item>

    </style>

